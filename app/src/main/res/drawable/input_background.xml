<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Transparent background -->
    <item>
        <shape android:shape="rectangle">
            <solid android:color="#FFFFFF"/> <!-- Background color -->
            <size android:height="1dp"/> <!-- Ensures the drawable does not add any extra height -->
            <corners android:radius="30dp"/> <!-- Bottom border -->
            <padding android:left="20dp" android:top="0dp" android:right="10dp" android:bottom="-2dp"/> <!-- Negative bottom padding to hide other borders -->
        </shape>
    </item>
    <!-- Bottom stroke -->
    <item android:bottom="0.5dp">
        <shape android:shape="rectangle">
            <size android:height="2dp"/>

        </shape>
    </item>
</layer-list>

